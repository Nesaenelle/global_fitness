extends ../layout.pug

block content
	.container
		ul(class="breadcrumbs")
			li(class="breadcrumbs__item")
				a(href="/") Главная
			li(class="breadcrumbs__item") Каталог товаров

		.catalog
			.catalog__filter
				.catalog__filter__section
					.catalog__filter__section--title Тип инвентаря
					each val in [{name: 'Велотренажеры'}, {name: 'Беговые дорожки'}, {name: 'Эллиптические кросстренажеры'}, {name: 'Свободно нагружаемые тренажеры'}, {name: 'Многофункциональные силовые тренажеры'}, {name: 'Степперы и лестничные тренажеры'}, {name: 'Гребные тренажеры'}, { name: 'Групповые велотренировки'}, {name: 'Тренажеры со стеками'}, {name: 'Скамьи и стойки'}, {name: 'Тренажеры для верхней части тела'}, {name: 'Свободные веса'}]
						.catalog__filter__section__item
							input(type="checkbox")
							img(src="", alt="")
							span= val.name
				.catalog__filter__section
					.catalog__filter__section--title Цена
				.catalog__filter__section
					.catalog__filter__section--title Производитель
				.catalog__filter__section
					.catalog__filter__section--title Группы мышц
				.catalog__filter__section
					.catalog__filter__section--title Линия
				.catalog__filter__section
					.catalog__filter__section--title Тип упражнения

			.catalog__goods
				.catalog__goods--title Гидравлические тренажеры
				.catalog--descr Предлагаем заказать создание сайта под ключ - визитку или корпоративный сайт с уникальным дизайном и полностью готовый под поисковое продвижение. При создании выполняется оптимизация под SEO. Мы создаём адаптивный дизайн, занимаемся доработкой и поддержкой уже работающих ресурсов, делаем их продуктивными и прибыльными.
				.catalog__goods__sort
					each val in [{name: 'Сортировка:', val: 'От дорогих'}, {name: 'Категория:', val: 'Выбрать'}, {name: 'Рекоммендованные:', val: 'Выбрать'}, {name: 'По названию:', val: 'По названию'}, {name: 'По зоне размещения: ', val: 'Выбрать'}]
						.catalog__goods__sort__item
							.catalog__goods__sort__item--title= val.name
							.catalog__goods__sort__item--value= val.val

				.catalog__goods__grid
					each val in [{descr: 'Бицепс/трицепс машина', title: 'Pulsefitness 368', price: '68 000 грн./шт.'}, {descr: 'Бицепс/трицепс машина', title: 'Pulsefitness 368', price: '68 000 грн./шт.'}, {descr: 'Бицепс/трицепс машина', title: 'Pulsefitness 368', price: '68 000 грн./шт.'}, {descr: 'Бицепс/трицепс машина', title: 'Pulsefitness 368', price: '68 000 грн./шт.'}, {descr: 'Бицепс/трицепс машина', title: 'Pulsefitness 368', price: '68 000 грн./шт.'}, {descr: 'Бицепс/трицепс машина', title: 'Pulsefitness 368', price: '68 000 грн./шт.'}, {descr: 'Бицепс/трицепс машина', title: 'Pulsefitness 368', price: '68 000 грн./шт.'}, {descr: 'Бицепс/трицепс машина', title: 'Pulsefitness 368', price: '68 000 грн./шт.'}]
						.catalog__goods__grid__item
							.catalog__goods__grid__item--article Артикул: 
								span 1234
							.catalog__goods__grid__item--favorite Избранное
								img(src="", alt="")
							img(class="catalog__goods__grid__item--img" src="img/trainersearch.png")
							.catalog__goods__grid__item--descr= val.descr
							.catalog__goods__grid__item--title= val.title
							.catalog__goods__grid__item--price= val.price

