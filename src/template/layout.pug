doctype html
head
	//- title= title
	link(rel="shortcut icon" href="/favicon.png")
	meta(content="width=device-width, height=device-height, initial-scale=1, minimum-scale=1.0, maximum-scale=1" name="viewport")
	//- block head
	link(href="https://fonts.googleapis.com/css?family=Roboto:100,200,300,300i,400,400i,500,500i,700,700i,900&display=swap" rel="stylesheet")
body
	header
		.top-header
			.container
				div
					a(href="/" class="logo")
						img(src="img/main_logo.png", alt="" class="logo")
						span ukraine
				div
					nav
						ul
							each val in [{url: 'traiding', name: 'Трейдин', pageName:'traiding'}, {url: 'financing', name: 'Финансирование', pageName:'financing'}, {url: 'diller', name: 'Дилеры', pageName:'diller'}, {url: 'about', name: 'О компании', pageName: "about"}, {url: 'our-work', name: 'Наши работы', pageName:'our-work'}, {url: 'contacts', name: 'Контакты', pageName:'contacts'}]
								li(class=((val.pageName == htmlWebpackPlugin.options.page) ? 'active' : ''))
									a(href=val.url + '.html')
										span= val.name
					.language
						.language__value RUS

		.sub-header
			.container
				div
					a(href="" class="sub-header__menu-item" data-type="products") Продукция
					
					a(href="" class="sub-header__menu-item" data-type="solutions") Готовые решения
					
					a(href="" class="sub-header__menu-item") Распродажа

					.additional-menu(data-menu="products")
						.additional-menu__products-list
							each val in [{name: 'Беговые дорожки', img: 'treadmill.svg'}, {name: 'Велотренажеры', img: 'spinning.svg'}, {name: 'Эллиптические кросстренажеры', img: 'treadmill.svg'}, {name: 'Гребные тренажеры', img: 'treadmill.svg'}, {name: 'Групповые велотренировки', img: 'spinning.svg'}, {name: 'Тренажеры со стеками', img: 'treadmill.svg'}, {name: 'Свободно нагружаемые тренажеры', img: 'bench.svg'}, {name: 'Многофункциональные силовые тренажеры и Cable Station', img: 'weightlifter.svg'}, {name: 'Степперы и лестничные тренажеры', img: 'treadmill.svg'}, {name: 'Скамьи и стойки', img: 'treadmill.svg'}, {name: 'Тренажеры для верхней части тела', img: 'weight.svg'}, {name: 'Свободные веса', img: 'weights.svg'}]
								.additional-menu__products-list__item
									img(src='img/' + val.img, alt="")
									span= val.name
						.additional-menu__sections
							a(class="additional-menu__sections__item" href="" style="background: url(img/cardio.png)") Кардио
							a(class="additional-menu__sections__item" href="" style="background: url(img/straight.png)") Силовые
							a(class="additional-menu__sections__item" href="" style="background: url(img/funtional.png)") Функциональные
							a(class="additional-menu__sections__item" href="" style="background: url(img/group.png)") Групповые виды
							a(class="additional-menu__sections__item" href="") Посмотреть всю продукцию
					.additional-menu(data-menu="solutions")
						.additional-menu__solutions-list
							each val in [{name: 'Решение премиум', img: 'premium.png'}, {name: 'Небольшой зал', img: 'smallhall.png'}, {name: 'Отель', img: 'hotel.png'}, {name: 'Зал на 1000 км.км', img: 'bighall.png'}, {name: 'Реабилитация', img: 'reabilitation.png'}]
								.additional-menu__solutions-list__item
									img(src='img/' + val.img, alt="")
									span= val.name
				div
					.sign-in
						img(src="img/user.svg", alt="")
						span Вход
					.search-input
						input(type="text" placeholder="Поиск на сайте")
						img(src="img/search.svg", alt="" class="search-input__img")
					.favorites
						img(src="img/favorite.svg", alt="")
					.cart
						img(src="img/cart.svg", alt="")
				


			.socials
					a(href="#" class="socials__item")
						img(src="img/facebook.svg", alt="")
					a(href="#" class="socials__item")
						img(src="img/instagram.svg", alt="")
					a(href="#" class="socials__item")
						img(src="img/telegram.svg", alt="")

	main(class=htmlWebpackPlugin.options.page + '-page')
		block content

	include  parts/footer.pug