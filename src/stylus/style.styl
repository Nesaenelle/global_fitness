.bottom-block
	padding: 50px 0
	margin-top: 50px
	background: #fafafa
	position relative
	overflow: hidden
	.container 
		position relative
		&:after 
			content: ''
			width: 5px
			height: 100%
			left: 0
			top: 0
			background: #d24a43
			position: absolute
	& > div
		display: flex 
	.btn 
		z-index: 1
		position: relative
	&__title 
		font-size: 32px
		text-transform: uppercase
		font-weight: 600
		position relative
		z-index: 1
	&__text
		margin-top: 20px
		font-size: 16px
		position relative
		z-index: 1
	&__bg-text 
		font-size: 212px
		position: absolute
		color: #f5f5f5
		font-family: 'Harlow'
		z-index: 0
		right: 20px
		top: 0
		line-height: 1em

@font-face {
	font-family: 'Harlow';
	src url('./Harlow.ttf');
	font-style: normal;
}
