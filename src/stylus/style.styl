@import 'reset.css'
@import 'variables.styl'
@import 'controls.styl'
@import 'header.styl'
@import 'footer.styl'
@import 'button.styl'
@import 'home.styl'
@import 'about.styl'
@import 'catalog.styl'
@import 'modal.styl'

$breakpoints = {
	hd: 1280px
	desktop: 1024px
	tablet: 768px
	mobile: 400px
}

body 
	font-family: 'Roboto', sans-serif
	color: #1f1f1f
input, button 
	font-family: 'Roboto', sans-serif
	

main 
	min-height: calc(100% - 145px - 270px)
	padding-top: 30px
	position: relative
	overflow: hidden
	&:after
		content: ''
		position: absolute
		top: 0
		left: 0
		width: 100%
		box-shadow: 0 0 5px 1px #666
		height: 0px
		z-index: 4
	
.container 
	max-width: 1600px;
	margin: auto;
	padding: 0 40px;

.breadcrumbs
	&__item
		font-size: 14px
		// color: #fff
		letter-spacing: .2px
		display: inline-block
		color: #0786ff
		a {
			color: #878787
			text-decoration: underline
		}
		& + .breadcrumbs__item 
			&:before 
				content: '|'
				margin: 0 5px


.bottom-block
	padding: 39px 0 41px 0
	margin-top: 50px
	background: #fafafa
	position relative
	overflow: hidden
	.container 
		max-width: 1435px
		position relative
		align-items: center
		&:after 
			content: ''
			width: 5px
			height: 86%
			left: 14px
			top: 9px
			background: #f14a3f
			position: absolute
			background: $c-border-red
	& > div
		display: flex 
	.btn 
		z-index: 1
		position: relative
	&__title 
		font-size: 36px
		text-transform: uppercase
		font-weight: 600
		position relative
		z-index: 1
	&__text
		margin-top: 23px;
		font-size: 16px;
		position: relative;
		z-index: 1;
		line-height: 1.5em;
	&__bg-text 
		font-size: 212px
		position: absolute
		color: #f5f5f5
		font-family: 'Harlow'
		z-index: 0
		right: 20px
		top: 0
		line-height: 1em
		

.quality-list
	margin-top: 40px
	display: flex
	flex-wrap: wrap
	justify-content: space-between
	&__item
		position: relative
		width: calc( 100% / 2 - 120px)
		margin-left: 90px
		margin-bottom: 30px
		border-top: 1px solid #ccc
		padding-top: 30px
		&:nth-child(1), &:nth-child(2) 
			border: none
		img 
			position: absolute
			width: 70px
			left: -90px
			top: 30px
			
		&--title
			// text-transform: uppercase
			color: #4f4f4f
			font-weight: 500
			
		&--text
			margin-top: 20px
			color: #4f4f4f
			font-size: 14px
			font-weight: 300
			line-height: 1.5em

@font-face {
	font-family: 'Harlow';
	src url('./Harlow.ttf');
	font-style: normal;
}
