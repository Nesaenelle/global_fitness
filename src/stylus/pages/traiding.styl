.traiding-page
	.bottom-block
		margin-top: 80px
		@media mqSmallTablet
			margin-top: 60px
		@media mqBigMobile
			margin-top: 40px
	.subtitle
		font-size: 18px
		color: #363636
		margin-top: 50px
		text-transform: uppercase
		font-weight: 600
		@media mqBigMobile
			font-size: 16px
		
	.text
		margin-top: 13px
		width: 100%
		line-height: 1.6em
		font-size: 14px
		color: #4d4d4d
		letter-spacing: -0.1px
		@media mqSmallTablet
			width: 100%
		& + .text
			margin-top: 24px
		
	.traiding
		display: flex
		margin-top: 24px
		@media mqSmallTablet
			flex-wrap: wrap
		& + .subtitle
			margin-top: 13px
			@media mqSmallTablet
				margin-top: 25px
		&__img
			width: 50%
			display: flex
			align-items: center
			@media mqSmallTablet
				width: 100%
			img
				width: 100%
				display: block
		.form
			width: 50%
			@media mqSmallTablet
				width: 100%