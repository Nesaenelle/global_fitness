.leasing-page
	display: block
	padding-top: calc(47px + 65px)


	.breadcrumbs
		margin-top: 25px

	.title
		text-transform: uppercase
		font-size: 18px
		color: #363636
		font-family: 'PT Sans', sans-serif
		&:after
			display none
			color: #363636

	.text
		font-size: 14px
		color: #4d4d4d
		font-weight: 300
		margin-top: 14px
		line-height: 1.75em
		letter-spacing: 0px
		font-family: 'PT Sans', sans-serif

	.steps
		margin-top: 52px
		display flex
		justify-content: space-between
		& + .title 
			margin-top: 70px
		&__item
			width: calc(100%/4)

			&:last-child
				.steps__item--img:after
					display none

			&:hover
				.steps__item--img
					img
						transform: scale(1.05)
			&:nth-child(2)
				img
					width: 50px
					margin-left: -21px

			&:nth-child(3)
				img
					width: 50px
					margin-left: -19px
					margin-top: 3px
						
			&:nth-child(4)
				img
					width: 47px
					margin-left: -18px

			&--text 
				font-size: 14px
				margin-top: 38px
				text-align: center
				font-family: 'PT Sans', sans-serif
				padding: 0px 15px
			    line-height: 1.6em
			&--img
				width: 141px
				height: 102px
				display flex
				align-items: center
				justify-content: center
				background: url(../img/step.png) no-repeat
				margin: auto
				position relative
				&:after
					content: ''
					margin-right: 7px
					border: solid $c-blue
					border-width: 0 4px 4px 0
					display: inline-block
					padding: 7px
					position: absolute
					right: -90%
					bottom: 0
					top: -3px
					margin: auto
					width: 0
					height: 0
					transform: rotate(-45deg)
					-webkit-transform: rotate(-45deg)
					transition: 0.2s
				img
					transition: 0.2s
					width: 45px
					margin-left: -10px

	.calculator
		display flex
		justify-content: space-between
		margin-top: 27px
		.form
			width: 27%
			.input
				& + .input, & + .dropdown
					margin-top: 9px
		.table
			width: 73%
			&__head, &__body 
				display flex
				border: 1px solid #e8e8e8

			&__head
				.table--item
					padding: 16px 20px
			&__body 
				border-top: none
				.table--item
					padding: 24px 20px
			&--item
				width: calc(100%/5)
				text-align: center
				font-size: 14px

	.request-form
		margin: 48px 0 0px 0
		padding: 43px 64px 44px 40px
		border: 4px solid $c-blue
		display: flex
		flex-wrap: nowrap
		align-items: center
		justify-content: space-between
		&--title
			font-size: 28px
			text-transform: uppercase
			font-weight: 600
			color: #191919
			width: 350px
			font-family: 'PT Sans', sans-serif
			& + .input
				margin-left: auto
		.input
			width: 320px
			height: 55px
			margin-right: 20px
			& + .input
				margin-top: 0
		.btn
			width: 280px
			margin-top: 0

	.bank-list
		margin-top: 40px
		display: flex
		justify-content: space-between
		flex-wrap: wrap
		&__item
			display flex
			align-items: center
			justify-content: center
			width: calc(100%/ 4 - 14px)
			border: 2px solid  #dcdcdc
			margin-top: 20px
			&:hover
				img 
					transform: scale(1.05)
			img 
				display block
				margin: 10px 0
				transition: 0.1s