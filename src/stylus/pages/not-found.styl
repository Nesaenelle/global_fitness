.not-found-page
    .not-found
        display: flex
        justify-content: space-between
        width: 75%
        margin: auto
        @media mqSmallDesktop
            width: 100%

        @media mqBigMobile
            flex-wrap: wrap
            width: 100%
        &--img
            display: flex
            align-items: center
            @media mqBigMobile
                margin: auto
            img
                width: 100%
                @media mqSmallDesktop
                    max-width: 330px
                @media mqBigMobile
                    margin-top: 30px
                    max-width: 170px
                @media mqMidMobile
                    margin-top: 20px
                    max-width: 130px
                @media mqSmallMobile
                    max-width: 100px
                    margin-top: 15px
                    
        &__info
            margin-left: 30px
            padding: 30px 0
            @media mqBigMobile
                width: 100%
                margin-left: 0
                padding: 20px 0
            &--number
                font-weight: 600
                font-size: 374px
                color: #c5c5c5
                line-height: 1em
                letter-spacing: -6px
                margin-left: -15px
                @media mqBigTablet
                    font-size: 320px
                @media mqMidTablet
                    font-size: 300px
                @media mqSmallTablet
                    font-size: 280px
                @media mqBigMobile 
                    text-align: center
                    font-size: 220px
                @media mqSemiMobile
                    font-size: 160px
                @media mqMidMobile
                    font-size: 140px
                @media mqSmallMobile
                    font-size: 100px

            &--title
                color: #383838
                font-weight: 600
                font-size: 36px
                @media mqBigTablet
                    font-size: 32px
                @media mqMidTablet
                    font-size: 30px
                @media mqSmallTablet
                    font-size: 28px
                @media mqBigMobile 
                    text-align: center
                @media mqMidMobile
                    font-size: 22px

            &--text
                font-size: 24px
                color: #383838
                margin-top: 28px

                @media mqBigTablet
                    font-size: 24px
                    margin-top: 22px
                @media mqMidTablet
                    font-size: 22px
                    margin-top: 20px
                @media mqSmallTablet
                    font-size: 20px
                    margin-top: 18px
                @media mqBigMobile 
                    text-align: center
                @media mqMidMobile
                    font-size: 16px
                a
                    text-decoration: underline
                    color: $c-blue