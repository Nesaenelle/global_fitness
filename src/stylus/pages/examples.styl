.examples-page
	.bottom-block 
		margin-top: 90px
		@media mqSmallTablet
			margin-top: 60px
		@media mqSemiMobile
			margin-top: 40px
	.examples__list
		display: flex
		justify-content: space-between
		flex-wrap: wrap
		margin-top: 46px
		// width: 100%
		&__item
			width: calc(100%/3)
			position: relative
			user-select: none
			min-height: 14.5vw
			@media mqSmallTablet
				width: calc(100%/2)
				min-height: 200px
			@media mqSemiMobile
				width: 100%
				min-height: 150px
			@media mqMidMobile
				margin-bottom: 15px


			&.has-children
				@media mqMidMobile
					margin-bottom: 0
				.examples__list__item--img
					@media mqSemiMobile
						min-height: 300px
					@media mqMidMobile
						min-height: 150px
						height: auto
					& > div
						width: 50%
						height: 50%
						@media mqMidMobile
							width: 100%
							min-height: 150px
						@media mqMidMobile
							margin-bottom: 15px
					img
						width: 50%
			&--img
				width: 100%
				display: flex
				flex-wrap: wrap
				align-items: flex-start
				height: 100%
				& > div
					width: 100%
					height: 100%
					background-size: cover!important
					background-position: center!important
					position: relative
					cursor: pointer
					&:hover
						&:after, &:before
							opacity: 1
							visibility: visible
					&:after
						content: ''
						position: absolute
						left: 0
						top: 0
						width: 100%
						height: 100%
						opacity: 0
						visibility: hidden
						background: rgba(7, 134, 255, 75%)
						transition: 0.2s
					&:before
						content: ''
						background: url('../img/search-white.svg')
						background-size: cover
						position: absolute
						top: 0
						bottom: 0
						left: 0
						opacity: 0
						visibility: hidden
						right: 0
						width: 40px
						height: 40px
						margin: auto
						z-index: 1
						
				img
					display: block
					width: 100%