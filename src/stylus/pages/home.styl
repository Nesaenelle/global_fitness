$slideOffsetDesktop = 120px
$slideOffsetTablet = 80px
// $slideOffsetMobile = 100px

.home-page 
	padding-top: 0
	.main-slider
		position: relative
		height: calc(100vh - 112px)
		overflow: hidden
		margin-top: 112px
		@media mqBigMobile
			height: auto
			margin-top: 95px
		@media mqMidMobile
			margin-top: 80px
		&__slide
			height: 100%
			width: 100%
			position: absolute
			left: 0
			top: 0
			transition: 0.5s ease-in-out
			animation: slidein 1s ease-in-out
			visibility: hidden
			animation-fill-mode: both
			box-shadow: 0 0 20px 0px #000
			
			@media mqBigMobile
				height: calc(100vh)
				position: relative
				animation: none
				opacity: 1
				visibility: visible
				left: auto!important
				top: auto!important
				transition: none
			@media mqMidMobile
				height: calc(100vh - 80px)
			&:nth-child(1)
				background: url(../img/slide1.png)
				background-size: cover
				background-position: center top
				
				z-index: 3
				left: "calc(-100% + %s)" % $slideOffsetDesktop
				@media mqBigMobile
					display: none
					height: calc(100vh - 100px)
				@media mqBigTablet
					left: "calc(-100% + %s)" % $slideOffsetTablet
				&.active
					left: "calc(-%s * 2)" % $slideOffsetDesktop
					@media mqBigTablet
						left: "calc(-%s * 2)" % $slideOffsetTablet
			
				animation-delay: 0s
			&:nth-child(2)
				background: url(../img/slide2.png)
				background-size: cover
				background-position: center top
				z-index: 2
				left: -($slideOffsetDesktop)
				display: flex
				align-items: center
				justify-content: center
				@media mqBigTablet
					left: -($slideOffsetTablet)
				&.active
					left: -($slideOffsetDesktop)
					@media mqBigTablet
						left: -($slideOffsetTablet)
				&.inactive
					left: "calc(-100% + %s * 2)" % $slideOffsetDesktop
					@media mqBigTablet
						left: "calc(-100% + %s * 2)" % $slideOffsetTablet
				animation-delay: 0.5s
			&:nth-child(3)
				z-index: 1
				left: 0
				background: #d0d0d0
				left: $slideOffsetDesktop
				.world-map
					opacity: 0;
					@media mqBigMobile
						opacity: 1
				@media mqBigTablet
					left: $slideOffsetTablet
				&.active
					left: 0
					.world-map 
						opacity: 1
				animation-delay: 1s
				
	.banner-block
		position: absolute
		bottom: 30px
		right: 0px
		background: $c-white
		width: 730px
		padding: 38px 29px 33px 29px
		border-left: 3px solid $c-border-red
		@media mqBigTablet
			padding: 25px
			width: 600px
		@media mqMidTablet
			width: 460px
			padding: 22px
		@media mqSemiMobile
			width: 320px
		@media mqMidMobile
			width: 300px
		&--title
			font-size: 48px
			font-weight: 600
			@media mqBigTablet
				font-size: 42px
			@media mqMidTablet
				font-size: 32px
			@media mqBigMobile
				font-size: 26px
		&--text
			margin-top: 14px
			font-size: 16px
			line-height: 1.5em
			@media mqBigMobile
				font-size: 14px
		&--link
			margin-top: 30px
			display: block
			font-size: 18px
			color: $c-blue
			text-transform: uppercase
			display: flex;
			align-items: center;
			@media mqBigMobile
				font-size: 16px
			@media mqMidMobile
				font-size: 14px
			&:hover
				text-decoration: underline
			svg
				margin-left: 10px
				fill: $c-blue
				width: 16px
				height: 16px
				margin-top: -1px
				@media mqMidMobile
					width: 13px
					height: 13px
	.search-block
		margin-left: 375px
		width: 465px
		display: flex
		flex-wrap: wrap
		align-items: center
		position: relative
		@media mqBigTablet
			width: 350px
		@media mqBigMobile
			margin: auto
			width: 300px
		&:after
			content: ''
			position: absolute
			right: 44px
			height: 70vh
			width: 1px
			background: $c-white
			z-index: -1
			@media mqBigTablet
				height: 60vh
		&__link 
			display: block
			width: 100%
			color: $c-white
			font-size: 24px
			text-align: right
			padding-right: 70px
			margin: 14px 0
			@media mqBigTablet
				font-size: 20px
				margin: 6px 0
			@media mqBigMobile
				font-size: 18px
			@media mqMidMobile
				font-size: 16px
			&:hover
				color: $c-border-red
		&__input
			width: 100%
			margin: 42px 0 46px 0
			background: $c-white
			border: 1px solid $c-border-red
			position: relative
			@media mqBigTablet
				margin: 30px 0 32px 0
			img 
				position: absolute
				width: 24px
				top: 0
				bottom: 0
				left: 20px
				margin: auto
			input
				padding: 14px 20px 14px 50px
				text-align: right
				font-size: 28px
				font-weight: 500
				border: none
				width: 100%
				color: #585858
				@media mqBigTablet
					font-size: 22px
					padding: 12px 18px 12px 50px
				@media mqSmallTablet
					font-size: 20px
				@media mqMidMobile
					font-size: 16px

	.text-block	
		position: relative
		margin: 81px 228px 0px 228px
		@media mqBigTablet
			margin: 81px 120px 0px 120px
		@media mqSmallTablet
			margin: 70px 70px 0px 70px
		@media mqBigMobile
			margin: 60px 50px 0px 50px
		@media mqMidMobile
			margin: 50px 30px 0px 30px
		@media mqSmallMobile
			margin: 30px 15px 0px 15px
		&:after
			content: ''
			position: absolute
			left: -30px
			top: 10px
			width: 5px;
			height: calc(100% - 15px)
			background: $c-border-red
			@media mqMidMobile
				width: 3px
				left: -20px

		&--title
			font-size: 36px
			font-weight: 600
			width: 800px
			@media mqBigTablet
				font-size: 30px
			@media mqBigMobile
				width: 100%
				font-size: 26px
			@media mqMidMobile
				font-size: 22px
			@media mqSmallMobile
				font-size: 18px
		&--descr 
			font-size: 16px
			line-height: 1.65em
			margin-top: 20px
			@media mqMidMobile
				font-size: 14px
	.grid
		display: flex
		justify-content: space-between
		height: 851px
		margin-top: 85px
		@media mqMidTablet
			flex-wrap: wrap
			height: auto
		@media mqBigMobile
			margin-top: 60px
		@media mqMidMobile
			margin-top: 40px
		& + .bottom-block 
			margin-top: 95px
			@media mqMidTablet
				margin-top: 60px
			@media mqMidMobile
				margin-top: 0px
		& > div
			height: 100%
			width: calc(50%)
			display: flex
			justify-content: space-between
			flex-wrap: wrap
			align-content: space-between;
			@media mqMidTablet
				width: 100%
			&:first-child
				width: calc(50% - 20px)
				@media mqMidTablet
					width: 100%
		&__item
			position: relative
			@media mqMidTablet
				height: 300px!important
				margin-bottom: 20px
			@media mqSemiMobile
				height: 250px!important
			@media mqSmallMobile
				height: 200px!important
			img
				width: 100%
				height: 100%
				display: block
				object-fit: cover;
			&.grid-2-1 
				width: 100%
				height: 100%
			&.grid-4-4
				width: calc(50% - 10px)
				height: calc(50% - 10px)		
			&.grid-2-4
				width: 100%
				height: calc(50% - 10px)
			&--text 
				position absolute
				background: $c-blue
				padding: 16px 39px 16px 25px
				display inline-block
				color: $c-white
				text-transform: uppercase
				font-size: 24px
				font-weight: 500
				bottom: 60px
				transition: 0.1s
				@media mqBigTablet
					font-size: 20px
					padding: 14px 30px 14px 23px
				@media mqBigMobile
					font-size: 18px
					padding: 12px 22px 12px 22px
					bottom: 40px
				@media mqSmallMobile
					font-size: 16px
					padding: 12px 15px 12px 15px
					
				&:hover 
					background: $c-white
					color: $c-blue
					

.world-map
	position: relative
	display: flex
	padding-left: 19%
	align-items: center
	height: 100%
	transition: 0.2s
	
	&.europe
		#europe-map
			display: block
	&.asian
		#asian-map
			display: block
	&.africa
		#africa-map
			display: block
			
	&.europe, &.asian, &.africa
		#world-map
			display: none
		.world-map__list__item.back 
			display: block
		.world-map__list__item.region
			display: none
		.world-map__list__item__dropdown
			display: block

	@media mqBigTablet
		padding-left: "calc(%s * 2 + 10px)" % $slideOffsetTablet
		align-items: flex-end
	@media mqBigMobile
		padding-left: 10px
	&--img
		width: 100%
		height: 100%
		position: absolute
		left: 0
		top: 0
		@media mqBigMobile
			display: none
		svg 
			display: block
			width: 100%
			height: 100%
			&#world-map
				@media mqBigMobile
					transform: scale(1.2)
			&#europe-map
				display: none
				@media mqBigMobile
					transform: translateX(-30%) scale(2.2)
			&#asian-map
				display: none
				transform: translateX(10%)
				@media mqBigTablet
					transform: translateX(10%)
				@media mqMidTablet
					transform: translateX(10%) scale(0.9)
				@media mqBigMobile
					transform: translateX(-15%) scale(1.3)
			&#africa-map
				display: none
				transform: translateX(10%)
				@media mqBigTablet
					transform: translateX(20%)
				@media mqMidTablet
					transform: translateX(20%) scale(0.8)
				@media mqBigMobile
					transform: none
			path 
				transition: 0.1s
				&.active
					stroke: #3296f5
					fill: #ebebeb
					cursor: pointer
			.group
				pointer-events: none
			.country-label 
				opacity: 0
				visible:hidden
				transition: 0.3s
				&.active
					opacity: 1
					visible:visible
				
	&__list
		position: relative
		z-index: 1
		background: #f3f3f3
		border-left: 2px solid $c-border-red
		padding: 0 30px
		// &.internal

		@media mqBigMobile
			padding: 0 20px
		&__item
			font-size: 16px
			color: #1f1f1f
			padding: 18px 0
			font-weight: 500
			&.back
				display: none
				top: -50px
				position: absolute
			&__dropdown
				display: none
			@media mqBigTablet
				font-size: 14px
				padding: 12px 0
			@media mqBigMobile
				font-size: 14px
				padding: 12px 0
			&:hover
				cursor: pointer
				color: $c-border-red
			&:first-child 
				& + .world-map__list__item
					border-top: none
				& ~ .world-map__list__item__dropdown
					border-top: none
			& + .world-map__list__item
				border-top: 1px solid #c5c5c5
				// border-bottom: 1px solid #c5c5c5
			&__dropdown
				padding: 0
				&.active
					.world-map__list__item__dropdown__list
						opacity: 1
						visibility: visible
						// .dropdown--value
						// 	&:after
						// 		top: 3px
						// 		transform: rotate(225deg)
						// 		-webkit-transform: rotate(225deg)
				&--value 
					padding: 18px 0;
				&__list
					position: absolute
					left: 0
					top: calc(100% + 1px)
					width: 100%
					background: #f3f3f3
					border: 1px solid #e8e8e8
					opacity: 0
					visibility: hidden
					transition: 0.2s
					z-index: 1
					box-shadow: 0 3px 10px -2px #ccc
					max-height: 200px
					overflow-y: auto
					@media mqSmallTablet
						bottom: 53px
						top: auto

					&--item
						width: 100%
						font-size: 12px
						padding: 10px 15px
						color: #4f4f4f
						display: block
						cursor: pointer
						&:hover
							background: #e8e8e8
@keyframes slidein {
  from {
		visibility: hidden
		transform: translateX(100%)
  }

  to {
	visibility: visible
	transform: translateX(0%)
  }
}	