.profile-page
	display: block
	
	.text
		font-size: 14px
		color: $c-text
		font-weight: 300
		margin-top: 14px
		line-height: 1.75em
		letter-spacing: 0px
		margin-top: 45px
		@media mqSmallTablet
			margin-top: 25px
		& + .text 
			margin-top: 23px
			@media mqSmallTablet
				margin-top: 15px
	.profile
		margin-top: 41px
		display: flex
		justify-content: space-between
		& + .text 
			margin-top: 100px
		&--left
			width: 285px
			.title
				margin-top: 0
		&--right
			width: calc(100% - 295px - 32px)
			padding-top: 5px
			
		&__menu
			margin-top: 56px
			&--title
				font-size: 16px
				font-weight: 600
				width: 100%
				text-transform: uppercase
				border-top: 1px solid #e8e8e8
				padding: 16px 3px 14px
				cursor: pointer
				position: relative
				&.no-children
					&:after
						display: none
				&.active
					&:after
						top: 2px
						transform: rotate(225deg)
						-webkit-transform: rotate(225deg)
				&:after
					content: ''
					margin-right: 7px
					border: solid #000
					border-width: 0 1px 1px 0
					display: inline-block
					padding: 3px
					position: absolute
					top: 0px
					bottom: 0
					right: 5px
					width: 0
					height: 0
					margin: auto
					transform: rotate(45deg)
					-webkit-transform: rotate(45deg)
					transition: 0.2s
					
			&__content
				padding: 3px 0 14px 0
				display: none
				&--item
					// padding-left: 20px
					font-size: 14px
					padding: 7px 20px
					cursor: pointer
			

		&__section
			padding-right: 20px
			display: none
			&.active
				display: block
			&--title
				text-transform: uppercase
				font-weight: 600
				font-size: 18px


			.catalog__goods__grid
				justify-content: flex-start
				&__item
					width: calc(100%/ 4 - 12px)
					margin-right: 20px	
				
			table
				margin-top: 20px
				width: 100%
				border-collapse: collapse
				thead
					tr
						td
							padding: 17px 15px 10px 15px
				tr
					td
						padding: 10px
						border: 1px solid #e8e8e8
						font-size: 14px
						&:nth-child(1)
							width: 9%
						&:nth-child(2)
							width: 13%
						&:nth-child(3)
							width: 46%
						&:nth-child(4)
							width: 13%
						&:nth-child(5)
							width: 13%
							text-align: center
						img
							max-width: 65px
							margin: 0px auto
							display: block
						b
							font-size: 16px
						p
							margin-top: 14px
				tbody
					tr
						td
							padding: 29px 15px 32px 15px
							
		&__in-progress
			margin-top: 22px
			&__item
				justify-content:space-between
				display: flex
				border: 1px solid #e8e8e8
				align-items: center
				position: relative
				padding-right: 372px
				padding-left: 30px
				height: 46px
				& + .profile__in-progress__item
					margin-top: 19px
				&--id
					color: $c-blue
					font-size: 14px
					margin-right: 27px
					width: 117px
					cursor: pointer
					text-decoration: underline
				&--date
					font-size: 14px
					margin-right: 11px
					width: 150px
				&--price
					font-size: 14px
				img
					width: 20px
					margin-right: auto
					
				&--status
					position: absolute
					right: 0
					top: 0
					height: 100%
					width: 345px
					display: flex
					padding: 0 30px
					font-size: 14px
					align-items: center
					&-done
						border-right: 5px solid #00c97c
						border-left: 1px solid #e8e8e8
						color: #00c97c
					&-waiting
						border-right: 5px solid #e8a765
						border-left: 1px solid #e8e8e8
						color: #e8a765
					&-cancel
						border-right: 5px solid #d24a43
						border-left: 1px solid #e8e8e8
						color: #d24a43
		&__total
			display: flex
			justify-content:space-between
			margin-top: 34px
			background: #f8f8f8
			padding: 11px 20px
			border-radius: 5px
			position: relative

			&--price
				font-size: 16px
				font-weight: 600
				b
					color: $c-blue
			&--status
				height: 100%
				top: 0
				display: flex
				align-items: center
				position: absolute
				right: 0
				background: #fff
				font-size: 14px
				padding: 0 54px
				border: 1px solid #f8f8f8
				&-done
					border-left: 5px solid #00c97c
					color: #00c97c
		&__favorite-total
			display: flex
			justify-content: space-between
			margin-top: 18px
			background: #f8f8f8
			padding: 15px 35px 15px 25px
			border-radius: 5px
			position: relative
			& > div 
				font-size: 16px
				display: flex
				flex-wrap: wrap
				align-content: center
				span
					letter-spacing: 0.9px
				b
					display: block
					color: $c-blue
					width: 100%
					margin-top: 5px
					letter-spacing: 0.7px