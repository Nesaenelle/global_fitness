.contacts-page
	
	.bottom-block
		margin-top: 90px
	
	.contacts
		margin-top: 60px
		display: flex
		justify-content: space-between
		
		.map
			width: 100%
			height: 100%
		&--left
			width: 50%
			display: flex
			flex-wrap: wrap
			.address
				width: calc(50% - 8px)
				margin-top: -3px
				&--title
					font-size: 18px
				&--subtitle
					font-size: 14px
				ul
					margin-top: 20px
					li
						font-size: 14px
						margin: 15px 0 20px 0
						width: 70%
						display: flex
						align-items: flex-start
						&:nth-child(2)
							svg
								margin-top: 0px
						&:nth-child(3)
							svg
								margin-top: 0px
						span 
							& + svg
								margin-left: 30px
						svg
							min-width: 14px
							width: 14px
							height: 14px
							margin-right: 10px
							margin-top: 3px
							fill: #f14a3f
						
			.form
				margin-top: 53px
				&--title
					margin-bottom: 27px
				.textarea
					height: 125px
					
				.btn.btn--blue 
					margin-top: 20px
		&--right
			width: 50%
			padding-right: 20px