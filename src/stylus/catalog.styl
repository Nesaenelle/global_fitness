.catalog-page 
	.bottom-block  {
		margin-top: 80px
	}
	.catalog
		padding-top: 40px
		display: flex
		justify-content: space-between
		&--descr 
			font-size: 16px
			color: #a9a9a9
			margin-top: 20px;
			line-height: 1.5em;
			font-weight: 300;
		&--title
			width: 100%
			font-size: 24px
			color: #666666
			font-weight: 500
			position: relative
			&:after 
				content: ''
				background: $c-blue
				height: 2px
				width: 60px
				position: absolute
				left: 0
				bottom: -14px
		&__filter
			display: block
			width: 300px
			&__section
				& + .catalog__filter__section
					margin-top: 30px
				&--title
					font-size: 16px
					text-transform: uppercase
					font-weight: 800
					margin:  0 0 20px 0
					position: relative
					color: #424242
					display: flex
					align-items: center
					cursor: pointer
					font-family: 'Open Sans', sans-serif
					&.active
						&:before
							transform: rotate(-135deg);
							-webkit-transform: rotate(-135deg);
							top: 2px
					&:before
						content: ''
						// left: 0
						margin-right: 7px
						border: solid black
						border-width: 0 1px 1px 0
						display: inline-block
						padding: 3px
						position: relative
						top: -2px
						// position: absolute
						transform: rotate(45deg)
						-webkit-transform: rotate(45deg)
						transition: 0.2s
				&__item
					height: 48px
					display: flex
					align-items: center
					border-bottom: 1px solid #e8e8e8
					cursor: pointer
					input
						width: 20px
					img 
						width: 25px
						margin: 0 10px
					span
						font-size: 14px
						font-weight: 500
				.checkbox
					display: flex
					& + .checkbox
						margin-top: 20px
		&__goods
			display: block
			width: calc(100% - 300px - 20px)
			&--title 
				font-size: 24px
				text-transform: uppercase
				position: relative
				color: #666666
				&:after
					content: ''
					background: $c-blue
					height: 2px
					width: 60px
					position: absolute
					left: 0
					bottom: -14px
			&__sort
				margin-top: 30px;
				background: #f8f8f8
				padding: 15px 20px
				display: flex
				justify-content: space-between
				&__item
					display: flex
					align-items: center
					position: relative
					&.active
						.catalog__goods__sort__item__dropdown
							display: block
			
					&--title
						font-size: 14px
						margin-right: 10px
						color: #a9a9a9
					&--value
						font-size: 14px
						color: $c-blue
						cursor: pointer
						text-decoration: underline
						position: relative
					&__dropdown
						position: absolute
						width: 200px
						background: $c-white
						display: none;
						left: 0
						top: 100%
						z-index: 1
						box-shadow: 0 0 14px -10px #000
						&--item
							padding: 10px 10px
							font-size: 13px
							color: #a9a9a9
							&:hover
								background: #f8f8f8
			&__bottom
				display: flex
				justify-content: space-between
				align-items: flex-start
				margin-top: 20px
				margin-bottom: 20px
			&__grid
				margin-top: 30px
				display: flex
				justify-content: space-between
				flex-wrap: wrap
				position: relative
				&__arrows
					position: absolute
					right: 0
					top: -50px
					&--left, &--right
						cursor: pointer
						content: ''
						border: solid $c-blue
						border-width: 0 1px 1px 0
						display: inline-block
						padding: 4px
						width: 0
						height: 0
						transition: 0.1s
						position: relative
						margin: 0 4px
						&:after
							content: ''
							position: absolute
							width: calc(100% + 10px)
							height: calc(100% + 10px)
							left: -5px
							top: -5px
							pointer-events: auto
					&--left
						transform: rotate(135deg)
						&:hover
							transform: rotate(135deg) scale(1.2)
					&--right
						transform: rotate(-45deg)
						&:hover
							transform: rotate(-45deg) scale(1.2)
				&__item
					border: 1px solid #e8e8e8
					padding: 15px
					width: calc(100% / 4 - 20px)
					margin-bottom: 20px
					display: flex
					justify-content: space-between
					flex-wrap: wrap
					position: relative
					&--article
						display: inline-flex
						font-size: 12px
					&--favorite
						font-size: 12px
						display: inline-flex
						align-items: center
						cursor: pointer
						&:hover 
							text-decoration: underline
							img
								transform: scale(1.1)
						img
							width: 15px
							margin-left: 5px
					&--label
						background: #f14a3f
						padding: 6px 10px
						font-size: 16px
						position: absolute
						right: 10px
						top: 40px
						color: $c-white
					&--descr
						font-size: 14px
					&--title
						font-weight: 500
						margin-top: 5px
						font-size: 18px
					&--price, &--new-price
						width: 100%
						font-size: 20px
						font-weight: 600
						margin-top: 15px
	
						&.disabled
							font-size: 14px
							color: #a4a4a4
							font-weight: 400
							margin-top: 7px
							position: relative
							span
								position: relative
								&:after
									content: ''
									background: #f14a3f
									width: 96%
									height: 1px
									position: absolute
									left: 0
									top: 0
									bottom: 0
									margin: auto
					&--new-price
						color: #f14a3f
						margin-top: 7px
					&--img
						width: 80%
						display: block
						margin: auto
					&__buttons
						margin-top: 15px
						width: 100%
						display: flex
						justify-content: space-between
						a
							display: block
						.btn--buy 
							width: calc(100% - 50px - 10px)
						.btn--compare
							width: 50px
							display: flex
							justify-content: center
							align-items: center
							height: 100%
							&:hover
								img
									width: 17px
							img
								width: 15px
								transition: 0.1s
		
		.compare
			width: 100%

			&-list
				margin-top: 40px
				display: flex
				justify-content: space-between
				position: relative
				width: 100%
				&__scroller
					width: calc(100% - 360px)
					display: flex
					overflow-x: auto
				&__item
					border-right: 1px solid #d6d4d4
					padding: 10px 0px
					// width: 
					min-width: calc(100% / 4);
					&__top
						height: 160px
						padding: 0 30px 0 30px
						display: flex
						flex-wrap: wrap
						align-items: flex-start
						position: relative
						&--wrap
							width: calc(100% - 90px)
						img
							width: 80px
						&--descr
							font-size: 14px
						&--title
							font-size: 18px
							font-weight: 600
							margin-top: 4px
						&--add
							text-transform: uppercase
							font-size: 18px
							font-weight: 500
							position: absolute
							width: 200px
							display: flex
							align-items: center
							top: 0
							bottom: 0
							margin: auto
							right: 30px
							cursor: pointer
							&:hover
								i
									transform: scale(1.05)
							i 	
								transition: 0.1s
								min-width: 50px
								width: 50px
								height: 50px
								background: $c-blue
								display:  block
								margin-right: 10px
								border-radius: 100%
								position: relative
								display: flex
								justify-content: center
								align-items: center
								font-style: normal
								color: $c-white
								font-size: 38px
								&:after 
									content: '+'
									
						.btn
							margin-top: 10px
							width: 100%
					&--main
						display: block
						width: 24%
						min-width: 360px
						.compare-list__item__top 
							img
								opacity: 0.5
								width: 180px
							
						.compare-list__item--section
							padding: 0 10px
							font-weight: 500
					&--section
						height: 50px
						padding: 0 70px
						color: #424242
						margin: 20px  0
						display: flex
						align-items: center
						&:after
							content: ''
							left: 0
							content: ''
							position: absolute
							background: #e8e8e8
							width: 100%
							position: absolute
							// height: 100%
							height: 50px
							z-index: -1
							transition: 0.1s
							opacity: 0
							visibility: hidden
						&:hover 
							&:after
								opacity: 1
								visibility: visible
								
		.search
			.catalog__goods__grid  
				width: 100%
				margin-top: 10px
				&__item
					width: calc(100% / 5 - 20px);
			&__result
				margin-top: 40px
				color: #424242
				display: flex
				align-items: center
				&--title
					font-size: 18px
					font-weight: 500
					margin-right: 8px
					text-transform: uppercase
				&--value
					font-size: 16px
		
		.product-card
			&__top
				display: flex
				justify-content: center
				align-items: center
				.catalog--title:after
					content: none
				.btn.btn--transparent 
					font-size: 12px
					white-space: nowrap
					padding: 10px 20px
			&__main
				margin-top: 20px
				display: flex
				justify-content: space-between
				&__slider
					width: 55%
					height: 400px
					border-right: 1px solid #e8e8e8
					display: flex
					position: relative
					&__img
						width: calc(100% - 100px - 20px)
						display: flex;
						align-items: center;
						justify-content: center;
						padding: 30px
						img
							width: 100%
							height: 100%
							display: block
							object-fit: contain
					&__thumbs
						width: 140px
						// height: 100%
						display: flex
						flex-wrap: wrap
						align-content: space-between
						&--item
							overflow: hidden
							width: 100%
							height: calc(100%/5 - 10px)
							border: 1px solid #e8e8e8
							padding: 10px
							cursor: pointer
							&:hover
								img
									transform: scale(1.07)
							img
								width: 100%
								height: 100%
								display: block
								object-fit: contain
								transition: 0.1s
					&--favorite
						position: absolute
						right: 30px
						top: 0px
						cursor: pointer
						&:hover
							transform: scale(1.1)
						img
							width: 22px
					&--compare
						position: absolute
						right: 30px
						top: 40px
						cursor: pointer
						&:hover
							transform: scale(1.1)
						img
							width: 24px
					&--zoom
						position: absolute
						right: 30px
						bottom: 0px
						cursor: pointer
						&:hover
							transform: scale(1.1)
						svg
							width: 24px
							height: 24px
							fill: #727272
				&__info
					width: calc(45% - 40px)
					&--article
						font-size: 14px
						display: inline-flex
						margin-right: 50px
						color: #4f4f4f
					&--state
						display: inline-flex
						font-size: 14px
						span
							font-weight: 600
							color: #4f4f4f
						b
							color: $c-blue
							margin-left:10px
					&--price
						margin-top: 5px
						font-size: 34px
						font-weight: 500
						color: #4f4f4f
					&--status
						margin-top: 5px
						font-size: 14px
					&__list
						display: inline-flex
						flex-wrap: wrap
						margin-right: 30px
						margin-top: 30px
						b 
							width: 100%
							font-size: 16px
							color: #4f4f4f
							font-weight: 600
						span
							display: inline-block
							margin-top: 10px
							color: $c-blue
							font-size: 13px
					&__bottom
						margin-top: 30px
						border-top: 1px solid #e8e8e8
						padding-top: 20px
						&__banner
							width: 140px
							border: 1px solid $c-blue
							display: inline-flex
							flex-wrap: wrap
							margin-right:30px
							img
								width: 100%
							&--text
								width: 100%
								background: $c-blue
								padding: 5px
								color: $c-white
								text-align: center
								text-transform: uppercase
								font-size: 12px
						&--link
							cursor: pointer
							display: inline-flex
							align-items: center
							margin-right:30px
							font-size: 14px
							text-decoration: underline
							color: #4f4f4f
							svg
								margin-right: 5px
								width: 22px
								height: 22px
					&--buttons
						margin-top: 20px
						display: flex
						flex-wrap: wrap
						justify-content: space-between
						.btn 
							height: 40px
							width: 220px
						.btn--transparent 
							margin-top: 10px
				
			&__bottom
				display: flex
				justify-content: center
				align-items: center
				position: relative
			&--back-link
				position: absolute
				right: 0
				color: $c-blue
				text-decoration: underline
				&:before
					content: ''
					margin-right: 10px
					border: solid $c-blue
					border-width: 0 1px 1px 0
					display: inline-block
					padding: 4px
					position: relative
					top: 0px
					// position: absolute
					transform: rotate(135deg)
					-webkit-transform: rotate(135deg)
					transition: 0.2s
			&--wrapper
				margin-top: 50px
				margin-bottom: 50px
				display: flex
				justify-content: space-between
				align-items: flex-start
			&__menu
				width: calc(50% - 20px)
				&--top
					display: flex
					flex-wrap: wrap
					border-bottom: 1px solid #e8e8e8
				&--item
					font-size: 16px
					cursor: pointer
					margin-right: 50px
					color: #4f4f4f
					position: relative
					padding: 10px 0
					&.active
						&:after
							width: 100%
							left: 0
							content: ''
							position: absolute
							bottom: -1px
							height: 2px
							background: $c-blue
				&--title
					margin-top: 20px
					font-size: 24px
					width: 100%
					color: #4d4d4d
				&--descr
					font-size: 14px
					margin-top: 10px
					width: 100%
					color: #4d4d4d
			&__details
				width: calc(50% - 20px)
				&--top
					width: 100%
					display: flex
					flex-wrap: wrap
					border-bottom: 1px solid #e8e8e8
				&--title
					font-size: 20px
					font-weight: 500	
					color: #4d4d4d
					width: 100%
					padding-bottom: 16px
				.quality-list
					width: 100%
					margin-top: 0
					&__item
						width: 100%
						border-top: none
						
			.catalog__goods__grid  
				width: 100%
				&__item
					width: calc(100% / 5 - 20px);
					