.about-page

	.title 
		font-size: 24px
		color: #666666
		font-weight: 600
		margin: 43px 0 0 0
		position relative
		@media mqBigMobile
			margin: 30px 0 0 0
			font-size: 20px
		&:after 
			content: ''
			background: $c-blue
			height: 2px
			width: 48px
			left: 0
			bottom: -20px
			position: absolute
			@media mqBigMobile
				bottom: -15px

	.subtitle
		margin: 45px 0 0 0
		font-size: 18px
		font-weight: 600
		text-transform: uppercase
		color: #363636
		@media mqBigMobile
			margin-top: 30px

	.text
		font-size: 14px
		color: $c-text
		font-weight: 300
		margin-top: 14px
		line-height: 1.75em
		letter-spacing: 0px
	.bottom-block
		margin-top: 91px
		@media mqBigMobile
			margin-top: 40px
	.circle-block-wrapper
		background: url(../img/about-us-circle-bg.png) no-repeat
		background-position: center
		// background-size: contain
		padding: 35px 0
		overflow: hidden
	.circle-block
		width: 408px
		height: 408px
		position relative
		margin: 63px auto 10px
		background: $c-white
		border-radius: 100%
		border: 4px solid $c-blue
		@media mqBigTablet
			width: 300px
			height: 300px
			margin: 63px auto 20px
		@media mqSmallTablet
			// transform: scale(0.8)
		@media mqSemiMobile
			margin: 110px auto 20px
		&__logo 
			width: 300px
			position absolute
			top: 0
			bottom: 0
			left: 0
			right: 0
			margin: auto
			@media mqBigTablet
				width: 200px
		&__circle
			width: 37px 
			height 37px
			position absolute
			border-radius: 100%
			border: 5px solid $c-blue
			background: $c-white
			@media mqBigTablet
				border: 4px solid $c-blue
			&:nth-child(1)
				left: 13px
				top: 67px
				@media mqBigTablet
					left: 18px
					top: 27px
				& > div
					right: 63px
					@media mqBigMobile
						right: 0
						top: -47px
					@media mqMidMobile
						right: -50px	
						top: -55px
			&:nth-child(2)
				left: 40px
				top: 323px
				@media mqBigTablet
					left: 10px
					top: 220px
				& > div
					right: 73px
					@media mqBigMobile
						right: -5px
						top: -36px
					@media mqMidMobile
						right: -55px
						top: -50px
			&:nth-child(3)
				left: 370px
				top: 252px
				@media mqBigTablet
					left: 253px
					top: 200px
				& > div
					left: 54px
					@media mqBigMobile
						left: -38px
						top: 33px
					@media mqMidMobile
						left: -60px
			& > div
				margin-top: 0px
				position absolute
				white-space: nowrap
				text-transform: uppercase
				font-size: 18px
				font-weight: 500
				color: #4d4d4d
				@media mqBigTablet
					font-size: 16px
					margin-top: 5px
					white-space: initial
				@media mqMidMobile
					font-size: 14px
		&__info
			width: 450px
			border: 2px solid $c-blue
			background: $c-white
			padding: 23px 30px 28px 30px
			position: absolute
			right: 4px
			transform: translateX(90%)
			top: -5px
			@media mqBigTablet
				width: 300px
				top: -35px
				right: 20px
				padding: 15px 20px 15px 20px
			@media mqSmallTablet
				top: -35px
				right: 150px
			@media mqBigMobile
				display: none
				// left: 0
				// right: 0
				// margin: auto
				// transform: none
				// top: -170px
			
			
			&--title
				font-size: 18px
				text-transform: uppercase
				font-weight: 500
				color: #4d4d4d
				@media mqBigTablet
					font-size: 16px
			&--text
				margin-top: 16px
				font-weight: 300
				font-size: 14px
				line-height: 1.7em
				@media mqBigTablet
					font-size: 12px

	.about-us-menu
		display flex
		justify-content: space-between
		margin-top: 40px
		padding-right: 19px
		@media mqMidTablet
			flex-wrap: wrap
			padding-right: 0
		& + .text
			margin-top: 45px
			@media mqSmallTablet
				margin-top: 25px
			& + .text 
				margin-top: 23px
				@media mqSmallTablet
					margin-top: 15px
		&__item
			width: calc(100%/ 4 - 13px)
			position relative
			@media mqMidTablet
				width: calc(100%/ 2 - 1%)
				margin-bottom: 20px
			@media mqMidMobile
				width: 100%
			a 
				position absolute
				width: 100%
				height: 100%
				left: 0
				top: 0
				z-index 1
			img 
				display block
				width: 100%
			&--text
				position absolute
				background: $c-blue
				padding: 16px 9px 16px 19px
				display inline-block
				color: $c-white
				text-transform: uppercase
				font-size: 16px
				font-weight: 500
				bottom: 18px
				@media mqBigTablet
					font-size: 14px
					padding: 14px 6px 14px 15px
	

	.our-team
		&__header
			margin-top: 39px
			display: flex
			justify-content: space-between
			@media mqBigMobile
				flex-wrap: wrap
			&--img
				min-width: 500px
				margin-right: 30px
				border: 2px solid #e8e8e8
				@media mqSmallTablet
					min-width: 320px
				@media mqBigMobile
					min-width: 280px
					margin-right: 0
				img
					width: 100%
					display: block
					height: 100%
					object-fit: cover
			
			&--title
				font-size: 16px
				font-weight: 500
				text-transform: uppercase
				@media mqBigMobile
					margin-top: 20px
			&--descr
				margin-top: 10px
				font-size: 14px
			&--text
				margin-top: 19px
				font-size: 14px
				letter-spacing: 0
				line-height: 1.75em
				font-weight: 300
				padding-right: 10px
		&__label
			font-size: 18px
			text-transform: uppercase
			font-weight: 600
			margin: 54px 0 51px 0
			position: relative
			letter-spacing: -0.8px
			color: #363636
			@media mqBigMobile
				margin: 35px 0 35px 0
			&:after 
				content: ''
				background: #e8e8e8
				height: 1px
				width: 80%
				position: absolute
				left: 0
				top: 0
				bottom: 0
				margin: auto
			span
				background: $c-white
				position: relative
				z-index: 1
				padding-right: 20px
		&__list
			display: flex
			// flex-wrap: wrap
			padding-right: 20px
			justify-content: space-between
			@media mqMidTablet
				flex-wrap: wrap
			
			& + .about-us-menu 
				margin-top: 96px
				@media mqMidTablet
					margin-top: 50px
				@media mqMidMobile
					margin-top: 30px
					
			&__item
				width: calc( 100% / 5 - 22px)
				@media mqMidTablet
					width: calc( 100% / 3 - 22px)
					margin-bottom: 30px
				@media mqBigMobile
					width: calc( 100% / 2 - 22px)
				@media mqMidMobile
					width: 100%
				img 
					margin-top: 15px
					width: 100%
					height: 258px
					object-fit: cover
					display: block
					border: 2px solid #e8e8e8
				&--title
					font-size: 16px
					font-weight: 600
					text-transform: uppercase
				&--descr
					margin-top: 11px
					font-size: 14px
					
	.quality-list
		margin-top: 24px
		
	.our-clients-list
		display: flex
		flex-wrap: wrap
		justify-content: space-between
		margin-top: 30px
		padding-right: 20px
		@media mqSmallTablet
			padding-right: 0
		& + .text
			margin-top: 40px
			@media mqBigMobile 
				margin-top: 25px
		&__item 
			width: calc( 100% / 4 - 15px)
			height: 206px
			margin-bottom: 16px
			border: 2px solid #ececec
			position: relative
			display: flex
			align-items: center
			justify-content: center
			@media mqSmallTablet
				width: calc( 100% / 3 - 15px)
			@media mqBigMobile
				width: calc( 100% / 2 - 15px)
				height: 170px
			@media mqMidMobile
				width: 100%
			&:hover
				& > div
					background: $c-blue
					opacity: 1
			img
				width: 100%
				max-width: 180px
				object-fit: contain
				@media mqBigMobile
					max-width: 150px
			& > div
				position: absolute
				left: 0
				// right: 0
				top: 0
				// bottom: 0
				// margin: auto
				
				opacity: 0
				padding: 20px
				// position: relative
				transition: 0.1s
				height: 100%
				
			&--title
				text-transform: uppercase
				color: $c-white
				
			&--text
				margin-top: 20px
				color: $c-white
				font-size: 14px
				font-weight: 300
				line-height: 1.5em
				
	.btn--blue
		margin: auto
		display block