.about-page

    .title 
        font-size: 24px
        color: #666666
        font-weight: 600
        margin: 30px 0 0 0
        position relative
        &:after 
            content: ''
            background: $c-blue
            height: 2px
            width: 50px
            left: 0
            bottom: -18px
            position: absolute

    .subtitle
        margin: 40px 0 0 0
        font-size: 18px
        font-weight: 600
        text-transform: uppercase
        color: $c-text

    .text
        font-size: 14px
        color: $c-text
        font-weight: 300
        margin-top: 20px
        line-height: 1.6em

    .circle-block-wrapper
        background: url(../img/about-us-circle-bg.png) no-repeat
        background-position: center
        // background-size: contain
        padding: 35px 0;
    .circle-block
        width: 380px
        height: 380px
        position relative
        margin: 30px auto 10px
        background: $c-white
        border-radius: 100%
        border: 4px solid $c-blue
        &__logo 
            width: 300px
            position absolute
            top: 0
            bottom: 0
            left: 0
            right: 0
            margin: auto
        &__circle
            width: 34px 
            height 34px
            position absolute
            border-radius: 100%
            border: 4px solid $c-blue
            background: $c-white
            &:nth-child(1)
                left: 22px
                top: 50px
                & > div
                    right: 50px
            &:nth-child(2)
                left: 44px
                top: 310px
                & > div
                    right: 50px
            &:nth-child(3)
                left: 344px
                top: 240px
                & > div
                    left: 50px
            & > div
                margin-top: 5px
                position absolute
                white-space: nowrap
                text-transform: uppercase
                font-size: 16px
                font-weight: 500
        &__info
            width: 450px
            border: 2px solid $c-blue
            background: $c-white
            padding: 20px 30px
            position: absolute
            right: 0px
            transform: translateX(90%)
            &--title
                font-size: 18px
                text-transform: uppercase
            &--text
                margin-top: 16px
                font-weight: 300
                font-size: 14px
                line-height: 1.6em

    .about-us-menu
        display flex
        justify-content: space-between
        margin-top: 40px
        &__item
            width: calc(100%/ 4 - 20px)
            position relative
            a 
                position absolute
                width: 100%
                height: 100%
                left: 0
                top: 0
                z-index 1
            img 
                display block
                width: 100%
            &--text
                position absolute
                background: $c-blue
                padding: 16px 10px
                display inline-block
                color: $c-white
                text-transform: uppercase
                font-size: 16px
                font-weight: 500
                bottom: 15px
    

    .our-team
        &__header
            margin-top: 30px
            display: flex
            justify-content: space-between
            &--img
                min-width: 500px
                margin-right: 30px
                img
                    width: 100%
                    display: block
            &--title
                font-size: 16px
                font-weight: 500
                text-transform: uppercase
            &--descr
                margin-top: 5px
                font-size: 14px
            &--text
                margin-top: 15px
                font-size: 14px
        &__label
            font-size: 16px
            text-transform: uppercase
            font-weight: 500
            margin: 30px 0 40px 0
            position: relative
            &:after 
                content: ''
                background: #e8e8e8
                height: 1px
                width: 70%
                position: absolute
                left: 0
                top: 0
                bottom: 0
                margin: auto
            span
                background: $c-white
                position: relative
                z-index: 1
                padding-right: 20px
        &__list
            display: flex
            // flex-wrap: wrap
            justify-content: space-between
            & + .about-us-menu 
                margin-top: 80px
            &__item
                width: calc( 100% / 5 - 20px)
                img 
                    margin-top: 15px
                    width: 100%
                    display: block
                &--title
                    font-size: 16px
                    font-weight: 500
                    text-transform: uppercase
                &--descr
                    margin-top: 5px
                    font-size: 14px
                    
    .quality-list
        margin-top: 40px
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        &__item
            position: relative
            width: calc( 100% / 2 - 120px)
            margin-left: 90px
            margin-bottom: 30px
            border-top: 1px solid #ccc
            padding-top: 30px
            &:nth-child(1), &:nth-child(2) 
                border: none
            img 
                position: absolute
                width: 70px
                left: -90px
                top: 30px
                
            &--title
                // text-transform: uppercase
                color: #4f4f4f
                font-weight: 500
                
            &--text
                margin-top: 20px
                color: #4f4f4f
                font-size: 14px
                font-weight: 300
                line-height: 1.5em

    .our-clients-list
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        margin-top: 30px
        &__item 
            width: calc( 100% / 4 - 15px)

            margin-bottom: 20px
            border: 2px solid #ececec
            position: relative
            &:hover
                & > div
                    background: $c-blue
                    opacity: 1
            img
                position: absolute
                left: 0
                right: 0
                top: 0
                bottom: 0
                margin: auto
            & > div
                opacity: 0
                padding: 20px
                position: relative
                transition: 0.1s
                height: 100%
                
            &--title
                text-transform: uppercase
                color: $c-white
                
            &--text
                margin-top: 20px
                color: $c-white
                font-size: 14px
                font-weight: 300
                line-height: 1.5em
                
    .btn--blue
        margin: auto
        display block