.modal
	display: flex
	align-items: center
	justify-content: center
	position: fixed
	width: 100%
	height: 100%
	z-index: 11
	left: 0
	top: 0
	opacity: 0
	visibility: hidden
	transition: 0.2s
	&.active 
		opacity: 1
		visibility: visible
	&--overlay
		z-index: 10
		position: fixed
		width: 100%
		height: 100%
		left: 0
		top: 0
		background: rgba(255,255,255, 0.9)
		opacity: 0
		visibility: hidden
		transition: 0.2s
		&.active 
			opacity: 1
			visibility: visible
	&--body 
		max-width: 680px
		width: 100%
		background: $c-white
		box-shadow: 0 0 20px -10px #666
		padding: 35px
		position: relative
	&--close
		position: absolute
		right: 10px
		top: 10px
		width: 20px
		height: 20px
		cursor: pointer
		font-family: 'PT Sans', sans-serif;
		font-size: 20px
		color: #666666
		&:hover
			transform: scale(1.1)
	&--title
		font-size: 26px
		font-weight: 500
		width: 100%
		color: #666666
		margin-bottom: 20px
	label
		font-size: 14px
		color: #555555
		line-height: 1.4em
		font-weight: 300
	&--link
		color: $c-blue
		font-size: 16px
		text-transform: uppercase
		text-decoration: underline
		cursor: pointer
		&-small
			font-size: 14px
			text-transform: none
	&--form
		display: flex
		flex-wrap: wrap
		width: 100%
		.modal--link
			margin: 10px 0 15px 0
		.modal--link
			width: 100%
			margin-left: auto
		input
			margin-top: 15px
			width: 100%
			padding: 17px 15px
			border: 1px solid #e8e8e8
			& + label
				margin-top: 20px
		
	&--left
		display: flex
		flex-wrap: wrap
		width: calc(65% - 30px)
	&--right
		// display: none
		position: relative
		// flex-wrap: wrap
		width: calc(35%)
		
		img
			cursor: pointer
			margin-top: 12px
			&:hover
				transform: scale(1.01)
			& + img
				margin-top: 8px
			
		.modal--link 
			bottom: 13px
			right: 0px
			position: absolute
			
	.sign-in, .sign-up 
		display: flex
		flex-wrap: wrap
		justify-content: space-between
		
	.sign-in
		.modal--form
			.btn 
				margin-right: 10px
				padding: 12px 10px
				width: 150px
				&--transparent
					border-color: transparent
	.sign-up
		.modal--form
			.btn 
				margin-right: 10px
				padding: 14px 10px
				font-size: 14px
				font-weight: 400
				margin-top: 10px
				& + label
					margin-top: 15px
			.modal--link
				margin-top: 4px