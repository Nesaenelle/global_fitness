header
	height: calc(47px + 65px)
	position fixed
	left: 0
	top: 0
	background: #fff
	width: 100%
	z-index: 100
	@media mqBigMobile
		height: calc(40px + 55px)
	@media mqMidMobile
		height: calc(35px + 45px)

	nav
		@media mqBigMobile
			display: none
		ul
			display: flex
			li
				margin: 0 6px
				&.active, &:hover
					a:after 
						display block
				a
					display: block
					padding: 15px 20px 13px
					font-size: 14px
					color: #1f1f1f
					letter-spacing: 0.5px
					position: relative
					&:after 
						content: ''
						display none
						position absolute
						z-index: 2
						bottom: -1px
						height: 2px
						width: 100%
						left: 0
						background: #0786ff
					@media mqSmallDesktop
						padding: 13px 5px 15px
					@media mqMidTablet
						font-size: 12px
						padding: 14px 2px 16px

	.logo 
		display: flex
		align-items: center
		@media mqBigMobile
			display: none
		img 
			width: 187px
			height: 38px
			object-fit: contain
			@media mqBigTablet
				width: 140px
			@media mqMidTablet
				width: 120px
			@media mqSmallTablet
				width: 100px
			&:after 
				content: ''
				height: 30px
				width: 1px
				backgound: #cccccc
		span
			font-size: 38px
			font-family: 'Harlow'
			position: relative
			&:first-child
				color: #282828
			&:last-child
				color: #0786ff
				margin-left: 20px
				@media mqMidMobile
					margin-left: 16px
				&:before
					content: ''
					background: #aaaaaa
					width: 1px
					height: 15px
					display: block
					position: absolute
					left: -10px	
					top: 0
					bottom: 0
					margin: auto
					@media mqMidMobile
						left: -8px
				@media screen and (max-width: 880px)
					display: none
	
					
			@media mqBigTablet
				font-size: 28px
			@media mqMidTablet
				font-size: 24px
			@media mqMidMobile
				font-size: 18px
			@media mqSmallMobile
				font-size: 16px

	.container
		display: flex
		justify-content: space-between
		align-items:center
		height: 100%
		max-width: 100%
		& > div 
			height: 100%
			display: flex
			align-items: center
			&:first-child {}
				
			&:last-child {
				// justify-content: flex-end
			}

	.sign-in
		display: flex
		align-items: center
		margin-right: 17px
		height: 100%
		cursor: pointer
		font-size: 14px
		position: relative
		&:after
			content: ''
			width: 1px
			height: 20px
			top: 0
			background: #ccc
			bottom: 0
			margin: auto
			position: absolute
			right: -12px
		img 
			width: 25px
			margin-right: 13px
			
	.favorites 
		height: 100%
		width: 85px
		display flex
		align-items: center
		justify-content: center
		position: relative
		&.active
			.favorites--value
				display: flex
		svg
			height: 27px
			width: 27px
			stroke: #000
			fill: $c-white
		&--value
			// font-family: 'PT Sans', sans-serif
			position: absolute
			background: $c-blue
			font-size: 11px
			color: $c-white
			border-radius: 100%
			width: 18px
			display: none
			font-weight: 300
			align-items: center
			justify-content: center
			height: 18px
			left: 44px
			top: 15px
			line-height: 1.6em
			@media mqBigMobile
				left: 20px;
				top: -5px;
				width: 16px
				height: 16px
				font-size: 10px
				line-height: 1.7em
			@media mqMidMobile
				left: 16px
				height: 14px
				width: 14px
				font-size: 9px

	.top-header
		
		padding: 10px 0
		height: 47px
		@media mqBigMobile
			height: 40px
		@media mqMidMobile
			height: 35px
		.container
			display: flex
			justify-content: space-between
			align-items:center
			padding: 0 64px 0 32px
			@media mqSmallTablet
				padding: 0 40px 0 30px
			@media mqBigMobile
				padding: 0 30px 0 20px
				
		.sign-in
			display: none
			@media mqMidMobile
				font-size: 12px
			img
				@media mqMidMobile
					width: 22px
					margin-right: 9px
			&:after
				display: none
			@media mqBigMobile
				display: flex!important
				
		.favorites 
			display: none
			@media mqBigMobile
				display: flex!important
				width: 38px
			@media mqMidMobile
				width: 26px
			svg
				@media mqBigMobile
					width: 20px
				@media mqMidMobile
					width: 18px
		.language
			margin-left: 60px
			position: relative
			width: 30px
			margin-top: -2px
			@media mqSmallDesktop
				margin-left: 25px
			@media mqBigMobile
				margin-left: 15px
			&.active
				.language__value
					&:after
						top: 3px
						transform: rotate(225deg)
						-webkit-transform: rotate(225deg)
				.language__list
					opacity: 1
					visibility: visible
			&__value
				text-align: right
				font-size: 14px
				cursor pointer
				color: #1f1f1f
				@media mqMidTablet
					font-size: 12px
				@media mqBigMobile
					font-size: 14px
				&:after
					content: ''
					margin-right: 7px
					border: solid #1f1f1f
					border-width: 0 1px 1px 0
					display: inline-block
					padding: 2px
					position: absolute
					right: -13px
					bottom: 0
					top: -3px
					margin: auto
					width: 0
					height: 0
					transform: rotate(45deg)
					-webkit-transform: rotate(45deg)
					transition: 0.2s
			&__list
				// width: 54px
				background: $c-white
				position: absolute
				opacity: 0
				visibility: hidden
				z-index: 6
				box-shadow: 0 3px 14px -8px #000
				left: -6px
				transition: 0.1s
				top: 20px
				@media mqMidTablet
					left: -2px
				@media mqBigMobile
					left: -6px
				&--item
					padding: 5px 10px
					font-size: 14px
					color: #1f1f1f
					cursor: pointer
					text-align: center
					@media mqMidTablet
						font-size: 12px
					@media mqBigMobile
						font-size: 14px
					&:hover
						background: #e8e8e8
	.sub-header 
		
		border-top: 1px solid #f3f3f3
		height: 65px
		position relative
		z-index: 4
		@media mqBigMobile
			height: 55px
		@media mqMidMobile
			height: 45px
		.container
			padding: 0 51px 0 0px
			@media mqBigMobile
				padding: 0
		.sign-in
			@media mqBigMobile
				display: none
		.favorites 
			@media mqBigMobile
				display: none
				
		.logo 
			display: none
			margin-left: 20px
			@media mqBigMobile
				display: flex
			span
				display: block
				
		&__menu-item 
			display: block
			color: #363636
			font-size: 14px
			padding: 20px 32px
			text-transform: uppercase
			letter-spacing: 0.5px
			font-weight: 600
			@media mqBigMobile
				display: none
				
			&:first-child
				@media mqMidTablet
					margin-left: 20px
			@media mqMidTablet
				padding: 20px 10px
				font-size: 12px
			&[data-type="products"]:hover
				& ~ .additional-menu[data-menu="products"]
					visibility: visible
					opacity: 1
			&[data-type="solutions"]:hover
				& ~ .additional-menu[data-menu="solutions"]
					visibility: visible
					opacity: 1
	
				
		.search-input
			height: 100%
			display: flex
			align-items: center
			justify-content: flex-end
			position: relative
			margin-right: 26px
			@media mqBigMobile
				position: static
			@media mqMidMobile
				margin-right: 20px
			@media mqSmallMobile
				margin-right: 15px
			&:after
				content: ''
				width: 1px
				height: 20px
				top: 0
				background: #ccc
				bottom: 0
				margin: auto
				position: absolute
				right: -30px
				@media mqBigMobile
					width: 95%
					height: 1px
					top: 145px
					background: #ccc
					bottom: 0
					right: auto
					left: 14px
					z-index: 5
					display: none
			&.active
				margin-left: 30px
				@media mqSmallMobile
					margin-left: 0
					margin-right: 15px
				&:after
					@media mqBigMobile
						display: block
						opacity: 0.6
					@media mqMidMobile
						display: none
				input
					width: 250px
					padding: 0px 0px
					@media mqBigMobile
						position: absolute
						left: 0
						width: 100%
						top: 59px
						background: $c-blue
						z-index: 5
						padding: 10px 15px
						height: 55px
						color: $c-white
						font-weight: 300
						border: none
						&::-webkit-input-placeholder
							color: $c-white
						&::-moz-placeholder
							color: $c-white
						&:-ms-input-placeholder
							color: $c-white
						&:-moz-placeholder
							color: $c-white
					@media mqMidMobile
						top: 44px
						height: 45px
					
			input 
				height: 30px
				border: none
				border-bottom: 1px solid #ccc
				margin-right: 20px
				width: 0
				transition: 0.3s width
				@media mqBigMobile
					transition: none
				@media mqSmallMobile
					margin-right: 0
			&__img
				width: 23px
				cursor: pointer
				@media mqMidMobile
					width: 19px
				@media mqSmallMobile
					width: 16px


		.cart 
			height: 100%
			width: 93px
			display flex
			align-items: center
			justify-content: center
			background: #e8e8e8
			position: relative
			cursor: pointer
			@media mqBigMobile
				background: $c-blue
			@media mqBigMobile
				width: 55px
			@media mqMidMobile
				width: 48px
			&:hover
				background: darken(#e8e8e8, 10%)
			svg
				width: 26px
				height: 26px
				position: relative
				left: -6px
				@media mqBigMobile
					left: 0
					fill: $c-white
				@media mqMidMobile
					width: 20px
					height: 20px
			&--value
				// font-family: 'PT Sans', sans-serif
				position: absolute
				background: $c-blue
				font-size: 11px
				color: $c-white
				border-radius: 100%
				width: 18px
				display: flex
				font-weight: 300
				align-items: center
				justify-content: center
				height: 18px
				left: 50px
				top: 15px
				line-height: 1.6em
				@media mqBigMobile
					background: $c-white
					left: 33px
					color: $c-blue
					top: 14px
					width: 16px
					height: 16px
					font-size: 10px
					line-height: 1.7em
				@media mqMidMobile
					left: 27px
					top: 8px
					height: 14px
					width: 14px
					font-size: 9px
		.burger
			width: 30px
			height: 30px
			margin-left: 20px
			margin-right: 20px
			z-index: 10
			transition: all .2s linear
			cursor: pointer
			display: none
			@media mqBigMobile
				display: block
			@media mqMidMobile
				width: 25px
				height: 27px
			&.opened
				span
					
					width: 30px
					background: none

					&:before
						width: 30px
						background: $c-blue
						top: 0px
						left: 0
						-webkit-transform: rotate(45deg)
						-ms-transform: rotate(45deg)
						-o-transform: rotate(45deg)
						transform: rotate(45deg)
						@media mqMidMobile
							width:25px
					

					&:after
						background: $c-blue
						width: 30px
						top: 0px
						left: 0
						-webkit-transform: rotate(-45deg)
						-ms-transform: rotate(-45deg)
						-o-transform: rotate(-45deg)
						transform: rotate(-45deg)
						@media mqMidMobile
							width:25px
							
			span
				position: relative
				width: 100%
				height: 3px
				display: inline-block
				background:  $c-blue
				transform: translateY(-50%)
				transition: all 0.2s linear
				@media mqMidMobile
					height: 2px
				&:before
					content: ""
					display: block
					width: 100%
					height: 3px
					background:  $c-blue
					position: absolute
					right: 0
					top: -9px
					transition: all 0.2s linear
					@media mqMidMobile
						height: 2px
						top: -7px

				&:after 
					content: ""
					display: block
					width: 100%
					height: 3px
					background:  $c-blue
					position: absolute
					right: 0
					top: 9px
					transition: all 0.2s linear
					@media mqMidMobile
						height: 2px
						top: 7px
		
		.dropdown-menu
			opacity: 0
			visibility: hidden
			position: absolute
			width: 100%
			background: #fff
			padding: 20px
			left: 0
			top: 0px
			transition: 0.2s
			box-shadow: 0px 10px 20px -15px #000
			text-align: center
			will-change: transform
			z-index: -1

			@media screen and (min-width: 769px) 
				display: none
	
			.socials
				margin-top: 10px
				position: static
				display: flex
				justify-content: center
				&__item
					margin: 0 4px
			&.opened
				top: 58px
				opacity: 1
				visibility: visible
				@media mqMidMobile
					top: 44px
			nav 
				width: 100%
				padding: 0
				display: block
				ul
					display: block
					li
						a
							font-size: 14px
							padding: 16px 0
							&:after
								width: 100px
								left: 0
								right: 0
								margin: auto
								bottom: 5px;
							@media mqMidMobile
								padding: 10px 0
	
		.socials
			display: flex
			position absolute
			right: 202px
			z-index: 1
			@media mqBigMobile
				display: none
				right: 20px
			&__item 
				padding: 11px
				background: $c-blue 
				margin: 0 0px 0 9px
				transition: 0.1s
				@media mqMidMobile
					margin: 0
					margin-bottom: 4px
				&:hover 
					background: darken($c-blue, 10%)
				img
					display block
					width: 14px
				
	.additional-menu
		position: absolute
		width: 100%
		background: $c-white
		top: 64px
		left: 0
		border-bottom: 2px solid $c-border-red
		z-index: 1
		opacity: 0
		visibility: hidden
		display: flex
		justify-content: space-between
		transition: 0.1s
		overflow: hidden
		@media mqBigMobile
			display: none
		
		&[data-menu=solutions]
			padding: 42px 33px 30px 50px
			@media mqBigTablet
				padding: 30px
		&[data-menu=products]
			padding: 68px 50px 30px 41px
			@media mqBigTablet
				padding: 30px
		&:hover 
			visibility: visible
			opacity: 1
		&:before 
			content: ''
			width: 100%
			height: 0px
			box-shadow: 0 3px 3px 0px #000
			position: absolute
			top: 0
			left: 0
		&:after
			content: ''
			width: 100%
			height: 20px
			position: absolute
			left: 0
			top: -20px
		&__products-list
			display: flex
			flex-wrap: wrap
			justify-content: space-between
			width: 67%
			align-content: space-between
			@media mqMidTablet
				width: 58%
			&__item
				width: calc(100%/6 - 20px)
				min-height: 150px
				@media mqBigTablet
					width: calc(100%/4 - 20px)
					min-height: 110px
				@media mqMidTablet
					width: calc(100%/3 - 20px)
					min-height: 90px
				&:hover
					img
						transform: scale(1.05)
				img 
					width: 50px
					display: block
					margin: auto
					transition: 0.1s
					@media mqBigTablet
						width: 40px
				span
					font-size: 14px
					width: 100%
					display: block
					margin: 19px auto 0
					text-align: center
					@media mqBigTablet
						font-size: 12px
		&__sections
			width: calc(33% - 60px)
			padding-right: 150px
			margin-top: -6px
			@media mqMidTablet
				width: 40%
			@media screen and (max-width: 1600px)
				padding-right: 0
				
			&__item
				display: block
				padding: 18px 34px 16px 34px
				text-transform: uppercase
				margin-bottom: 2px
				color: $c-white
				font-size: 14px
				position: relative
				@media mqMidTablet
					padding: 15px 25px
				svg 
					top: 0
					bottom: 0
					right: 17px
					margin: auto
					fill: $c-white
					width: 18px
					position: absolute
					height: 18px
				&:hover
					background: $c-blue!important
					color: $c-white!important
				&:last-child
					border:2px solid $c-blue
					text-align: center
					font-weight: 500
					color: $c-blue
		&__solutions-list
			display: flex
			justify-content: space-between
			width: 100%
			&__item
				width: calc(100%/5 - 20px)
				&:hover
					img
						// transform: scale(1.02)
						filter: grayscale(0%)
				img 
					width: 100%
					display: block
					margin: auto
					border: 1px solid $c-border-red
					transition: 0.1s
					filter: grayscale(100%)
				span
					font-size: 14px
					width: 83%
					display: block
					margin: 22px auto 0
					text-align: center
					text-transform:uppercase
					font-weight: 500