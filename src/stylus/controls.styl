.checkbox
	display: inline-flex
	align-items: center
	cursor: pointer
	input
		display: none
		&:checked ~ .checkbox--icon
			// background: red
			border: 1px solid $c-blue
			&:after 
				content: 'âœ”'
				height: 100%
				width: 100%
				display: block
				font-size: 12px
				text-indent: 3px
				line-height: 1.3em
				justify-content: center
				color: $c-blue
	&--icon
		width: 15px
		height: 15px
		// background: #ccc
		border: 1px solid #a9a9a9
		display: inline-flex
		align-items: center
	&--text
		font-size: 14px
		margin-left: 15px
		color: #424242
		font-family: 'Open Sans', sans-serif
		
	&--extra 
		margin-left: auto
		font-size: 16px
		color: #a1a1a1
		font-weight: 300
		font-family: 'Open Sans', sans-serif
.pagination
	display: flex
	&__item
		font-size: 14px
		margin: 0 2px
		background: $c-white
		border: 1px solid #e8e8e8
		padding: 12px 10px
		cursor: pointer
		width: 35px
		text-align: center
		&.active, &:hover:not(.dots):not(.next)
			background: $c-blue
			color: $c-white
			border: 1px solid $c-blue
		&.dots
			border: none
			width: 18px
			padding: 14px 0 8px
			
		&.next
			background: #e8e8e8
			color: $c-white
			transform: rotate(180deg)
			
.slider-range
	&__wrapper
		display: flex
		justify-content: space-between
		width: 100%
		margin-top: 23px
	&__from, &__to
		font-family: 'Open Sans', sans-serif
		color: #424242
		font-weight: 300
		input 
			width: 100%
			max-width: 110px
			margin-left: 8px
			font-size: 16px
			text-align: center
			padding: 4px
			color: #9b9b9b
			border: 1px solid #e8e8e8
			font-family: 'Open Sans', sans-serif
			
.ui-slider 
	margin-top: 20px
	&.ui-slider-horizontal 
		background: #f1f1f1
		height: 3px
		.ui-slider-range
			background: $c-blue
		.ui-slider-handle
			cursor: pointer
			background: $c-blue
			border-radius: 100%
			top: -5px
			width: 12px
			height: 12px
			// position: relative
			&:after
				content: ''
				width: 0 
				height: 0 
				border-left: 6px solid transparent
				border-right: 6px solid transparent
				border-top: 8px solid $c-blue
				position: absolute
				top: 8px
				

.input-number
	display: inline-flex
	position: relative
	height: 40px
	input
		text-align: center
		width: 42px
		font-weight: 600
		border: 1px solid #e8e8e8
		color: #4f4f4f
		font-size: 14px
	&--up, &--down
		cursor: pointer
		width: 30px
		position: relative
		background: $c-blue
		color: $c-white
		font-size: 20px
		display: flex
		align-items: center
		justify-content: center
		&:hover
			background: darken($c-blue, 15%)
	&--up:after
		content: '+'
			
	&--down:after
		content: '-'
		

.dropdown
	display: inline-flex
	align-items: center
	position: relative
	width: 227px
	height: 40px
	&.active
		.dropdown__list
			opacity: 1
			visibility: visible
		.dropdown--value
			&:after
				top: 3px
				transform: rotate(225deg)
				-webkit-transform: rotate(225deg)
	&--value
		cursor: pointer
		color: #4f4f4f
		border: 1px solid #e8e8e8
		height: 100%
		width: 100%
		display: flex
		align-items: center
		padding: 0 25px 0 15px
		font-size: 14px
		position: relative
		&:after
			content: ''
			margin-right: 7px
			border: solid #000
			border-width: 0 1px 1px 0
			display: inline-block
			padding: 3px
			position: absolute
			right: 10px
			bottom: 0
			top: -3px
			margin: auto
			width: 0
			height: 0
			transform: rotate(45deg)
			-webkit-transform: rotate(45deg)
			transition: 0.2s
	&__list
		position: absolute
		left: 0
		top: calc(100% - 1px)
		width: 100%
		background: $c-white
		border: 1px solid #e8e8e8
		opacity: 0
		visibility: hidden
		transition: 0.2s
		z-index: 1
		box-shadow: 0 3px 10px -2px #ccc
		&--item
			width: 100%
			font-size: 12px
			padding: 10px 15px
			color: #4f4f4f
			cursor: pointer
			&:hover
				background: #e8e8e8