.checkbox
	display: inline-flex
	align-items: center
	cursor: pointer
	input
		display: none
		&:checked ~ .checkbox--icon
			// background: red
			border: 1px solid $c-blue
			&:after 
				content: 'âœ”'
				height: 100%
				width: 100%
				display: block
				font-size: 12px
				text-indent: 3px
				line-height: 1.3em
				justify-content: center
				color: $c-blue
	&--icon
		width: 16px
		height: 16px
		// background: #ccc
		border: 1px solid #a9a9a9
		display: inline-flex
		align-items: center
	&--text
		font-size: 14px
		margin-left: 10px
		color: #424242
		font-family: 'Open Sans', sans-serif;
		
	&--extra 
		margin-left: auto
		font-size: 16px
		color: #a1a1a1
		font-family: 'Open Sans', sans-serif;
.pagination
	display: flex
	&__item
		font-size: 14px
		margin: 0 3px
		background: $c-white
		border: 1px solid #e8e8e8
		padding: 12px 10px
		cursor: pointer
		width: 35px
		text-align: center
		&.active, &:hover:not(.dots):not(.next)
			background: $c-blue
			color: $c-white
			border: 1px solid $c-blue
		&.dots
			border: none
			
		&.next
			background: #e8e8e8
			color: $c-white
			transform: rotate(180deg)
			
.slider-range
	&__wrapper
		display: flex
		justify-content: space-between
		width: 100%
	&__from, &__to
		font-family: 'Open Sans', sans-serif;
		color: #424242
		font-weight: 300
		input 
			width: 100%
			max-width: 120px
			margin-left: 4px
			font-size: 16px
			text-align: center
			padding: 4px
			color: #9b9b9b
			border: 1px solid #e8e8e8
			font-family: 'Open Sans', sans-serif;
			
.ui-slider 
	margin-top: 20px
	&.ui-slider-horizontal 
		background: #f1f1f1;
		height: 3px
		.ui-slider-range
			background: $c-blue
		.ui-slider-handle
			cursor: pointer
			background: $c-blue
			border-radius: 100%
			top: -5px
			width: 12px
			height: 12px
			// position: relative
			&:after
				content: ''
				width: 0; 
				height: 0; 
				border-left: 6px solid transparent;
				border-right: 6px solid transparent;
				border-top: 8px solid $c-blue;
				position: absolute
				top: 8px