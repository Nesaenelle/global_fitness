$slideOffsetDesktop = 200px
$slideOffsetTablet = 150px
$slideOffsetMobile = 100px

.home-page 
	padding-top: 0
	.main-slider
		position: relative
		height: calc(100vh - 145px)
		overflow: hidden
		@media mqBigMobile
			height: auto
		&__slide
			height: 100%
			width: 100%
			position: absolute
			left: 0
			top: 0
			transition: 0.5s ease-in-out
			animation: slidein 1s ease-in-out
			visibility: hidden
			animation-fill-mode: both
			
			@media mqBigMobile
				height: calc(100vh - 145px)
				position: relative
				animation: none
				opacity: 1
				visibility: visible
				left: auto!important
				top: auto!important
				transition: none
			&:nth-child(1)
				background: url(../img/slide1.png)
				background-size: cover
				background-position: center top
				
				z-index: 3
				left: "calc(-100% + %s)" % $slideOffsetDesktop
				@media mqBigTablet
					left: "calc(-100% + %s)" % $slideOffsetTablet
				&.active
					left: "calc(-%s * 2)" % $slideOffsetDesktop
					@media mqBigTablet
						left: "calc(-%s * 2)" % $slideOffsetTablet
			
				animation-delay: 0s
			&:nth-child(2)
				background: url(../img/slide2.png)
				background-size: cover
				background-position: center top
				z-index: 2
				left: -($slideOffsetDesktop)
				display: flex
				align-items: center
				justify-content: center
				@media mqBigTablet
					left: -($slideOffsetTablet)
				&.active
					left: -($slideOffsetDesktop)
					@media mqBigTablet
						left: -($slideOffsetTablet)
				&.inactive
					left: "calc(-100% + %s * 2)" % $slideOffsetDesktop
					@media mqBigTablet
						left: "calc(-100% + %s * 2)" % $slideOffsetTablet
				animation-delay: 0.5s
			&:nth-child(3)
				z-index: 1
				left: 0
				background: #d0d0d0
				left: $slideOffsetDesktop
				@media mqBigTablet
					left: $slideOffsetTablet
				&.active {
					left: 0
				}
				animation-delay: 1s
				
	.banner-block
		position: absolute
		bottom: 30px
		right: 0px
		background: $c-white
		width: 730px
		padding: 38px 29px 33px 29px
		border-left: 3px solid $c-border-red
		@media mqBigTablet
			padding: 25px
			width: 600px
		@media mqMidTablet
			width: 460px
			padding: 22px
		@media mqSemiMobile
			width: 320px
		@media mqMidMobile
			width: 300px
		&--title
			font-size: 48px
			font-weight: 600
			@media mqBigTablet
				font-size: 42px
			@media mqMidTablet
				font-size: 32px
			@media mqBigMobile
				font-size: 26px
		&--text
			margin-top: 14px
			font-size: 16px
			line-height: 1.5em
			@media mqBigMobile
				font-size: 14px
		&--link
			margin-top: 30px
			display: block
			font-size: 18px
			color: $c-blue
			text-transform: uppercase
			display: flex;
			align-items: center;
			@media mqBigMobile
				font-size: 16px
			@media mqMidMobile
				font-size: 14px
			&:hover
				text-decoration: underline
			svg
				margin-left: 10px
				fill: $c-blue
				width: 16px
				height: 16px
				margin-top: -1px
				@media mqMidMobile
					width: 13px
					height: 13px
	.search-block
		margin-left: 375px
		width: 465px
		display: flex
		flex-wrap: wrap
		align-items: center
		position: relative
		@media mqBigTablet
			width: 350px
		@media mqBigMobile
			margin: auto
			width: 300px
		&:after
			content: ''
			position: absolute
			right: 44px
			height: 70vh
			width: 1px
			background: $c-white
			z-index: -1
			@media mqBigTablet
				height: 60vh
		&__link 
			display: block
			width: 100%
			color: $c-white
			font-size: 24px
			text-align: right
			padding-right: 70px
			margin: 14px 0
			@media mqBigTablet
				font-size: 20px
				margin: 6px 0
			@media mqBigMobile
				font-size: 18px
			&:hover
				color: $c-border-red
		&__input
			width: 100%
			margin: 42px 0 46px 0
			background: $c-white
			border: 1px solid $c-border-red
			position: relative
			@media mqBigTablet
				margin: 30px 0 32px 0
			img 
				position: absolute
				width: 24px
				top: 0
				bottom: 0
				left: 20px
				margin: auto
			input
				padding: 18px 20px
				text-align: right
				font-size: 18px
				border: none
				width: 100%
				@media mqBigTablet
					padding: 14px 18px
	.world-map
		position: relative
		display: flex
		padding-left: 400px
		align-items: center
		height: 100%
		@media mqBigTablet
			padding-left: "calc(%s * 2)" % $slideOffsetTablet
		@media mqBigMobile
			padding-left: 0
		&__list
			background: #f3f3f3
			border-left: 2px solid $c-border-red
			padding: 0 30px
			@media mqBigMobile
				padding: 0 20px
			&--item
				font-size: 16px
				color: #1f1f1f
				padding: 18px 0
				font-weight: 500
				@media mqBigMobile
					font-size: 14px
					padding: 12px 0
				&:hover
					cursor: pointer
				&:nth-child(2)
					border-top: 1px solid #c5c5c5
					border-bottom: 1px solid #c5c5c5
	
	.text-block	
		position: relative
		margin: 81px 228px 0px 228px
		@media mqBigTablet
			margin: 81px 120px 0px 120px
		@media mqSmallTablet
			margin: 70px 70px 0px 70px
		@media mqBigMobile
			margin: 60px 50px 0px 50px
		@media mqMidMobile
			margin: 50px 30px 0px 30px
		@media mqSmallMobile
			margin: 30px 15px 0px 15px
		&:after
			content: ''
			position: absolute
			left: -30px
			top: 10px
			width: 5px;
			height: calc(100% - 15px)
			background: $c-border-red
			@media mqMidMobile
				width: 3px
				left: -20px

		&--title
			font-size: 36px
			font-weight: 600
			width: 800px
			@media mqBigTablet
				font-size: 30px
			@media mqBigMobile
				width: 100%
				font-size: 26px
			@media mqMidMobile
				font-size: 22px
			@media mqSmallMobile
				font-size: 18px
		&--descr 
			font-size: 16px
			line-height: 1.65em
			margin-top: 20px
			@media mqMidMobile
				font-size: 14px
	.grid
		display: flex
		justify-content: space-between
		height: 851px
		margin-top: 85px
		@media mqMidTablet
			flex-wrap: wrap
			height: auto
		@media mqBigMobile
			margin-top: 60px
		@media mqMidMobile
			margin-top: 40px
		& + .bottom-block 
			margin-top: 95px
			@media mqMidTablet
				margin-top: 60px
			@media mqMidMobile
				margin-top: 0px
		& > div
			height: 100%
			width: calc(50%)
			display: flex
			justify-content: space-between
			flex-wrap: wrap
			align-content: space-between;
			@media mqMidTablet
				width: 100%
			&:first-child
				width: calc(50% - 20px)
				@media mqMidTablet
					width: 100%
		&__item
			position: relative
			@media mqMidTablet
				height: 300px!important
				margin-bottom: 20px
			@media mqSemiMobile
				height: 250px!important
			@media mqSmallMobile
				height: 200px!important
			img
				width: 100%
				height: 100%
				display: block
				object-fit: cover;
			&.grid-2-1 
				width: 100%
				height: 100%
			&.grid-4-4
				width: calc(50% - 10px)
				height: calc(50% - 10px)		
			&.grid-2-4
				width: 100%
				height: calc(50% - 10px)
			&--text 
				position absolute
				background: $c-blue
				padding: 16px 39px 16px 25px
				display inline-block
				color: $c-white
				text-transform: uppercase
				font-size: 24px
				font-weight: 500
				bottom: 60px
				transition: 0.1s
				@media mqBigTablet
					font-size: 20px
					padding: 14px 30px 14px 23px
				@media mqBigMobile
					font-size: 18px
					padding: 12px 22px 12px 22px
					bottom: 40px
				@media mqSmallMobile
					font-size: 16px
					padding: 12px 15px 12px 15px
					
				&:hover 
					background: $c-white
					color: $c-blue
					

@keyframes slidein {
  from {
		visibility: hidden
		transform: translateX(100%)
  }

  to {
	visibility: visible
	transform: translateX(0%)
  }
}	