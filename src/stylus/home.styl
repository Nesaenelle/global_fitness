.home-page 
	padding-top: 0
	.main-slider
		position: relative
		height: calc(100vh - 145px)
		overflow: hidden
		&__slide
			height: 100%
			width: 100%
			position: absolute
			left: 0
			top: 0
			transition: 0.5s ease-in-out
			animation: slidein 1s ease-in-out
			visibility: hidden
			animation-fill-mode: both
			&:nth-child(1)
				background: url(../img/slide1.png)
				background-size: cover
				background-position: center top
				
				z-index: 3
				left: calc((-100%) + 200px)
				&.active {
					left: -400px
				}
				animation-delay: 0s
			&:nth-child(2)
				background: url(../img/slide2.png)
				background-size: cover
				background-position: center top
				z-index: 2
				left: -200px
				display: flex
				align-items: center
				justify-content: center
				
				&.active {
					left: -200px
				}
				&.inactive {
					left: calc((-100%) + (200px * 2));
				}
				animation-delay: 0.5s
			&:nth-child(3)
				z-index: 1
				left: 0
				background: #d0d0d0
				left: 200px
				&.active {
					left: 0
				}
				animation-delay: 1s
				
	.banner-block
		 
		position: absolute
		bottom: 30px
		right: 0px
		background: $c-white
		width: 730px
		padding: 30px
		border-left: 2px solid $c-border-red
		&--title
			font-size: 36px
		&--text
			margin-top: 20px
			font-size: 16px
		&--link
			margin-top: 20px
			display: block
			font-size: 16px
			color: $c-blue
			text-transform: uppercase
	.search-block
		margin-left: 400px
		width: 460px
		display: flex
		flex-wrap: wrap
		align-items: center
		position: relative
		&:after
			content: ''
			position: absolute
			right: 35px
			height: 180%
			width: 1px
			background: $c-white
			z-index: -1
		&__link 
			display: block
			width: 100%
			color: $c-white
			font-size: 24px
			text-align: right
			padding-right: 70px
			margin: 14px 0
			&:hover
				color: $c-border-red
			// font-family: mad
		&__input
			width: 100%
			margin: 30px 0
			background: $c-white
			border: 1px solid $c-border-red
			position: relative
			img 
				position: absolute
				width: 24px
				top: 0
				bottom: 0
				left: 20px
				margin: auto
			input
				padding: 18px 20px
				text-align: right
				font-size: 18px
				border: none
				width: 100%
	.world-map
		position: relative
		display: flex
		padding-left: 400px
		align-items: center
		height: 100%
		&__list
			background: #f3f3f3
			border-left: 2px solid $c-border-red
			padding: 0 30px
			&--item
				font-size: 16px
				color: #1f1f1f
				padding: 18px 0
				font-weight: 500
				&:hover
					cursor: pointer
				&:nth-child(2)
					border-top: 1px solid #c5c5c5
					border-bottom: 1px solid #c5c5c5
	
	.text-block	
		position: relative
		margin: 40px 200px 0 200px
		&:after
			content: ''
			position: absolute
			left: -30px
			top: 0
			width: 5px;
			height: 100%
			background: $c-border-red;

		&--title
			font-size: 36px
			font-weight: 600
			width: 800px
		&--descr 
			font-size: 14px
			line-height: 1.6em
			margin-top: 20px
	.grid
		display: flex
		justify-content: space-between
		height: 840px
		margin-top: 50px
		& + .bottom-block 
			margin-top: 80px
		& > div
			height: 100%
			width: calc(50% - 10px)
			display: flex
			justify-content: space-between
			flex-wrap: wrap
			align-content: space-between;
		&__item
			position: relative
			img
				width: 100%
				height: 100%
				display: block
				object-fit: cover;
			&.grid-2-1 
				width: 100%
				height: 100%
			&.grid-4-4
				width: calc(50% - 10px)
				height: calc(50% - 10px)		
			&.grid-2-4
				width: 100%
				height: calc(50% - 10px)
			&--text 
				position absolute
				background: $c-blue
				padding: 16px 35px 16px 25px
				display inline-block
				color: $c-white
				text-transform: uppercase
				font-size: 24px
				font-weight: 500
				bottom: 55px
				transition: 0.1s
				&:hover 
					background: $c-white
					color: $c-blue
					

@keyframes slidein {
  from {
  		visibility: hidden
		transform: translateX(100%)
  }

  to {
  	visibility: visible
  	transform: translateX(0%)
  }
}	